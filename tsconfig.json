{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "alwaysStrict": true
    },
    "files": [
        "angular2-jwt.ts",
        "angular2-jwt.spec.ts",
        "custom.d.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}
